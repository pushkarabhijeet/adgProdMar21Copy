<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>BP_Line_Item_Underlayment_Other</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(  Underlayment__c  ,&quot;Other&quot;),
ISBLANK( Underlayment_Other__c ))</errorConditionFormula>
