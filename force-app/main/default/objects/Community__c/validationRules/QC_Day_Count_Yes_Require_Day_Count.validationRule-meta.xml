<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>QC_Day_Count_Yes_Require_Day_Count</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
ISPICKVAL( Use_Builder_Profile_Values__c  , &quot;No&quot;),
ISBLANK( Day_Count_QC_End__c ))</errorConditionFormula>
    <errorDisplayField>Day_Count_QC_End__c</errorDisplayField>
