<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>QC_LVT_Yes_Require_Day_Count</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
ISPICKVAL( QC_LVT_Install__c , &quot;Yes&quot;),
ISBLANK( Day_Count_LVT__c  ))</errorConditionFormula>
    <errorDisplayField>Day_Count_LVT__c</errorDisplayField>
    <errorMessage>When selecting QC LVT Install &quot;Yes&quot; the Day Count for Countertops must be entered.</errorMessage>
</ValidationRule>
