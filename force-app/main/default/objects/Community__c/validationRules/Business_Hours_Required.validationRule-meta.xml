<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Business_Hours_Required</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
ISPICKVAL( Use_Builder_Profile_Values__c  , &quot;No&quot;),
ISBLANK(  Business_Hours__c  ))</errorConditionFormula>
    <errorDisplayField>Business_Hours__c</errorDisplayField>
    <errorMessage>Business Hours cannot be left blank.  Select Installer standard M-F.</errorMessage>
</ValidationRule>
